{
  "private": true,
  "version": "0.0.5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "format": "prettier --write \"{src,__tests__}/**/*.{js,ts}\" \"**/*.md\"",
    "format:check": "prettier --list-different \"{src,__tests__}/**/*.{js,ts}\" \"**/*.md\"",
    "lint": "eslint --ext js,ts src __tests__",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn test --coverage",
    "prepublishOnly": "yarn format:check && yarn lint && yarn test && yarn build",
    "coverage": "yarn test:cov --coverageReporters=text-lcov | coveralls",
    "examples:lint": "eslint --ext js,ts examples"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/plugin-external-helpers": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/plugin-transform-typescript": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-jest": "^26.6.3",
    "coveralls": "^3.1.0",
    "eslint": "^7.11.0",
    "husky": "^4.3.6",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-typescript2": "^0.28.0",
    "ts-jest": "^26.4.2",
    "typescript": "^4.0.3"
  },
  "hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prepublishOnly"
    ]
  }
}
